.flex-container()
  display: flex
  align-items: center

.header
  background-color: transparent
  width: 100%
  position: relative

  &__content
    display: flex
    flex-direction: row
    white-space: nowrap
    align-items: center
    justify-content: flex-start
    padding: 42px 42px 0 42px
    box-sizing: border-box

  &__title
    font-family: 'Tactic Sans', sans-serif
    font-size: 32px
    line-height: 100%
    color: #FFFFFF

  &__filter
    margin-left: 24px

  &__error-container
    margin-left: auto
    margin-right: 12px
    box-sizing: border-box
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    padding: 14px 24px
    background: rgba(15, 19, 24, 1)
    border-radius: 4px

  &__error-icon
    width: 28px
    height: 28px
    flex: none

  &__error-vector
    width: 100%
    height: 100%

  &__error-text
    font-family: Inter
    font-weight: 500
    font-size: 18px
    letter-spacing: 0%
    color: #FFFFFF

  &__refresh-button
    background: #EB0237
    border: none
    border-radius: 4px
    cursor: pointer
    height: 56px
    padding: 0
    display: flex
    align-items: center
    justify-content: center
    &:hover:not(:disabled)
      background: #A01131
    &:disabled
      background: #701328
      cursor: not-allowed
    &:disabled .header__refresh-text
      color: #787878
    &:disabled .header__loader
      color: #787878

  &__refresh-content
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    gap: 10px
    padding: 0 40px
    height: 100%

  &__refresh-text
    font-family: 'Inter', sans-serif
    font-weight: 600
    font-size: 18px
    color: #FFFFFF

  &__loader
    width: 26px
    height: 26px
    background: none

  &__icon-refresh
    width: 26px
    height: 26px
    position: relative
    flex: none

.rotating
  animation: spin 1s linear infinite

@keyframes spin
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

.drop-list-container
  position: relative
  min-width: 170px

.drop-list-button
  position: relative
  padding: 16px 20px 16px 16px
  gap: 12px
  min-width: 170px
  display: flex
  align-items: center
  justify-content: space-between
  background-color: rgba(11, 14, 18, 1)
  border: none
  border-radius: 4px
  cursor: pointer
  box-sizing: border-box
  margin-right: auto
  margin-left: 24px
  .drop-list-button__text,
  .drop-list-button__arrow
    color: rgba(180, 181, 182, 1)
  &:hover
    background-color: rgba(15, 19, 24, 1)
    .drop-list-button__text,
    .drop-list-button__arrow
      color: rgba(255, 255, 255, 1)
  &:active
    background-color: rgba(11, 14, 18, 1)
    border: 1px solid rgba(23, 29, 37, 1)
    .drop-list-button__text,
    .drop-list-button__arrow
      color: rgba(255, 255, 255, 1)

.drop-list-button__text
  font-family: 'Inter', sans-serif
  font-size: 16px
  line-height: 150%
  font-weight: 500
  color: rgba(180, 181, 182, 1)

.drop-list-button__arrow
  transition: transform 0.3s ease

.drop-list-button__arrow--rotated
  transform: rotate(180deg)

.drop-list-dropdown
  position: absolute
  left: 0
  width: 100%
  padding: 6px 0 6px 0
  top: calc(100% + 8px)
  border-radius: 4px
  background-color: rgba(11, 14, 18, 1)
  box-sizing: border-box
  overflow: hidden
  z-index: 10
  font-family: 'Inter', sans-serif
  font-weight: 500
  font-size: 16px

.drop-list-dropdown__item
  display: flex
  flex-direction: column
  justify-content: center
  align-items: flex-start
  padding: 12px
  cursor: pointer
  color: rgba(180, 181, 182, 1)
  &:hover
    background-color: rgba(17, 22, 29, 1)
    color: rgba(255, 255, 255, 1)
  &:active
    background-color: rgba(13, 17, 21, 1)

.drop-list-dropdown__item--active
  background-color: rgba(15, 19, 24, 1)
  color: rgba(104, 105, 106, 1)

@media screen and (max-width: 1100px)
  .header__content
    flex-direction: column
    align-items: center
    padding: 32px 12px 0 12px
    width: 100%
  .header__title
    font-size: 28px
    margin: 0
  .drop-list-button
    margin-top: 14px
    width: 100%
    margin-left: 0
    margin-right: 0
  .header__error-container,
  .header__refresh-button
    width: 100%
    margin-left: auto
    text-align: center
  .header__error-container,
  .header__refresh-button
    margin-top: 12px

@media screen and (max-width: 428px)
  .header__title
    font-size: 20px
  .header__refresh-button
    height: 40px
  .drop-list-button
    padding: 12px 16px 12px 12px
  .header__refresh-content
    padding: 0 20px
