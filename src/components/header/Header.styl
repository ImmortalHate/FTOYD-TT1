.header
  background-color transparent
  width 100%
  position relative

.header__content
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  padding 42px 42px 0 42px
  box-sizing border-box

.header__title
  font-family 'Tactic Sans', sans-serif
  font-size 32px
  line-height 100%
  color #FFFFFF

.header__action-container
  display flex
  flex-direction row
  align-items center
  gap 12px

.header__error-container
  display flex
  flex-direction row
  align-items center
  gap 10px
  padding 14px 24px
  background rgba(15, 19, 24, 1)
  border-radius 4px

.header__error-icon
  width 28px
  height 28px
  flex: none

.header__error-vector
  width 100%
  height 100%

.header__error-text
  font-family Inter
  font-weight 500
  font-size 18px
  letter-spacing 0%
  color #FFFFFF

.header__refresh-button
  background #EB0237
  border none
  border-radius 4px
  cursor pointer
  height 56px  
  padding 0         
  display flex
  align-items center
  justify-content center

.header__refresh-button:hover:not(:disabled)
  background #A01131

.header__refresh-button:disabled
  background #701328
  cursor not-allowed

.header__refresh-button:disabled .header__refresh-text
  color #787878

.header__refresh-button:disabled .header__loader
  color #787878


.header__refresh-content
  display flex
  flex-direction row
  align-items center
  justify-content center
  gap 10px
  padding 0 40px  
  height 100%

.header__refresh-text
  font-family 'Inter', sans-serif
  font-weight 600
  font-size 18px
  color #FFFFFF

.header__loader
  width 26px
  height 26px
  background: none

.rotating
  animation spin 1s linear infinite

@keyframes spin
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

.header__icon-refresh
  width 26px
  height 26px
  position relative
  flex: none

