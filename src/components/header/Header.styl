.flex-container()
  display flex
  align-items center

.header
  background-color transparent
  width 100%
  position relative

  &__content
    display flex
    flex-direction row
    white-space nowrap
    align-items center
    justify-content flex-start
    padding 2.625rem 2.625rem 0 2.625rem
    box-sizing border-box

  &__title
    font-family 'Tactic Sans', sans-serif
    font-size 2rem
    line-height 100%
    color #FFFFFF

  &__filter
    margin-left 1.5rem

  &__error-container
    margin-left auto
    margin-right 0.75rem
    box-sizing border-box
    display flex
    flex-direction row
    align-items center
    gap 0.625rem
    padding 0.875rem 1.5rem
    background rgba(15, 19, 24, 1)
    border-radius 0.25rem

  &__error-icon
    width 1.75rem
    height 1.75rem
    flex none

  &__error-vector
    width 100%
    height 100%

  &__error-text
    font-family Inter
    font-weight 500
    font-size 1.125rem
    letter-spacing 0%
    color #FFFFFF

  &__refresh-button
    background #EB0237
    border none
    border-radius 0.25rem
    cursor pointer
    height 3.5rem
    padding 0
    display flex
    align-items center
    justify-content center
    &:hover:not(:disabled)
      background #A01131
    &:disabled
      background #701328
      cursor not-allowed
    &:disabled .header__refresh-text
      color #787878
    &:disabled .header__loader
      color #787878

  &__refresh-content
    display flex
    flex-direction row
    align-items center
    justify-content center
    gap 0.625rem
    padding 0 2.5rem
    height 100%

  &__refresh-text
    font-family 'Inter', sans-serif
    font-weight 600
    font-size 1.125rem
    color #FFFFFF

  &__loader
    width 1.625rem
    height 1.625rem
    background none

  &__icon-refresh
    width 1.625rem
    height 1.625rem
    position relative
    flex none

.rotating
  animation spin 1s linear infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

.drop-list-container
  position relative
  min-width 10.625rem

.drop-list-button
  position relative
  padding 1rem 1.25rem 1rem 1rem
  gap 0.75rem
  min-width 10.625rem
  display flex
  align-items center
  justify-content space-between
  background-color rgba(11, 14, 18, 1)
  border none
  border-radius 0.25rem
  cursor pointer
  box-sizing border-box
  margin-right auto
  margin-left 1.5rem
  .drop-list-button__text,
  .drop-list-button__arrow
    color rgba(180, 181, 182, 1)

  &:hover
    background-color rgba(15, 19, 24, 1)
    .drop-list-button__text,
    .drop-list-button__arrow
      color rgba(255, 255, 255, 1)

  &:active
    background-color rgba(11, 14, 18, 1)
    border 1px solid rgba(23, 29, 37, 1)
    .drop-list-button__text,
    .drop-list-button__arrow
      color rgba(255, 255, 255, 1)


.drop-list-button__text
  font-family 'Inter', sans-serif
  font-size 1rem
  line-height 150%
  font-weight 500
  color rgba(180, 181, 182, 1)

.drop-list-button__arrow
  transition transform 0.3s ease

.drop-list-button__arrow--rotated
  transform rotate(180deg)

.drop-list-dropdown
  position absolute
  left 0
  width 100%
  padding 0.375rem 0 0.375rem 0
  top calc(100% + 0.5rem)
  border-radius 0.25rem
  background-color rgba(11, 14, 18, 1)
  box-sizing border-box
  overflow hidden
  z-index 10
  font-family 'Inter', sans-serif
  font-weight 500
  font-size 1rem

.drop-list-dropdown__item
  display flex
  flex-direction column
  justify-content center
  align-items flex-start
  padding 0.75rem
  cursor pointer
  color rgba(180, 181, 182, 1)
  &:hover
    background-color rgba(17, 22, 29, 1)
    color rgba(255, 255, 255, 1)
  &:active
    background-color rgba(13, 17, 21, 1)

.drop-list-dropdown__item--active
  background-color rgba(15, 19, 24, 1)
  color rgba(104, 105, 106, 1)

@media screen and (max-width: 1100px)
  .header__content
    flex-direction: column
    align-items: center
    padding 2rem 0.75rem 0 0.75rem
    width: 100%
  .header__title
    font-size 1.75rem
    margin 0
  .drop-list-button
    margin-top 0.875rem
    width: 100%
    margin-left 0
    margin-right 0
  .header__error-container,
  .header__refresh-button
    width: 100%
    margin-left: auto
    text-align center
  .header__error-container,
  .header__refresh-button
    margin-top 0.75rem

@media screen and (max-width: 428px)
  .header__title
    font-size 1.25rem
  .header__refresh-button
    height 2.5rem
  .drop-list-button
    padding 0.75rem 1rem 0.75rem 0.75rem
  .header__refresh-content
    padding 0 1.25rem
